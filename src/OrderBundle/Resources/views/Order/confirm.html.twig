{% extends 'base.html.twig' %}

{% block title %}Order confirm{% endblock %}

{% block body %}
    <div class="container clearfix" xmlns="http://www.w3.org/1999/html">
        <div class="col-lg-6 col-lg-offset-3">
            <h2>Confirm order</h2>
            {{ form_start(form) }}
            <div class="form-group">
                <label for="phone">Contact Phone</label>
                {{ form_widget(form.phone, {'attr' : {'class' : 'form-control', 'id' : 'phone', 'placeholder' : '380669936205'}}) }}
                {% for errorItem in form.phone.vars.errors %}
                    <label class="control-label has-error" for="{{ form.phone.vars.id }}">{{ errorItem.message|trans }}</label>
                {% endfor %}
            </div>
            <div class="form-group">
                {{ form_widget(form.submit, {'attr' : {'class' : 'btn btn-success'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}